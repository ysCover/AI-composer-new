@import '../../common/style/mixin.styl';
@import '../../common/style/variable.styl';

.detail-page {
  display: flex;
  width: 100%;
  height: 100vh;

  & > div {
    display: flex;
    width: 100%;
    hyphens: auto;
    background: hsla(0, 0%, 100%, 0.5);
    overflow: hidden;
    position: relative;
  }

  .filter {
    position: absolute;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    width: 100%;
    filter: blur(40px);
    background-attachment: fixed;
    background-repeat: repeat-x;
    background-size: contain;
  }

  .left {
    flex: 1;
    position: relative;
  }

  .album-img {
    width: 350px;
    height: 350px;
    transition: all 0.4s;
    margin-bottom: 20px;
    position: absolute;
    left: 50%;
    top: 20%;
    transform: translate(-50%);
  }

  .album-img.active {
    box-shadow: 0 0 20px 4px rgba(0, 0, 0, 0.3);
    width: 375px;
    height: 375px;
  }

  .right {
    flex: 1;
    box-sizing: border-box;
    padding: 40px 200px 0 100px;
  }

  .name {
    position: absolute;
    font-size: 32px;
    color: #464646;
    mx_single_ellipsis();
  }
}
