@import '../../../common/style/mixin.styl';
@import '../../../common/style/variable.styl';

.lyric-block {
  height: 600px;
  overflow: hidden;
  margin-top: 20px;
  position: relative;

  .lyrics {
    mx_postl(0, 30px);
    font-size: 16px;
  }

  .lyrics.move-animate {
    transition: all 1s;
  }

  .line {
    height: 28px;
  }

  .line.active {
    color: yellow;
  }

  .lyric-info {
    mx_fc(24px, #000);
    mx_postl(100px, 200px);
  }
}
