@import '../../common/style/mixin.styl';
@import '../../common/style/variable.styl';

$songContainerColor = #b0b0b1;
$oddColor = #f4f4f6;
$indexAndNameColor = #333333;

.songList {
  .play-all-btn {
    display: inline-block;
    font-size: 14px;
    margin-left: 12px;
    margin-bottom: 15px;
    cursor: pointer;
  }

  .container {
    mx_fc(12px, $songContainerColor);
    text-align: left;
  }

  .item {
    display: flex;
    mx_hlh(45px, 45px);
    padding-left: 15px;

    &:nth-child(odd) {
      background-color: $oddColor;
    }

    &:nth-child(even) {
      background-color: $pageBgc;
    }
  }

  .section-one, .section-two {
    flex: 2;
    mx_single_ellipsis();

    & > i {
      margin: 0 12px;
    }
  }

  .index, .name {
    color: $indexAndNameColor;
    margin-right: 8px;
  }

  .artist {
    display: inline-block;
  }

  .album {
    flex: 2;
  }

  .duration {
    flex: 1;
  }
}
